<% provide :bodyclass, "admin" %>
<% provide :index, '4' %>

<div id="articles">
  <div class="boxed-group">
    <%= content_tag :h3, yield(:content_title) %>
    <div class="boxed-group-inner">
      <%= simple_form_for @tag, url: yield(:form_url) do |f| %>
        <div class="row">
          <div class="col-md-8">
            <div class="form-group">
              <%= content_tag :span, t("tags.name") %>
              <%= f.input_field :name, class: "form-control form-input-normal" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit t("submit"), class: "btn btn-primary submit", style: "margin-top: 0;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>