<!DOCTYPE html>
<html style="overflow-y: scroll;">
  <%= render 'shared/page_head' %>
  <body>
    <% provide :hidden_nav_center_items, true %>
    <%= content_tag :div, class: yield(:bodyclass) do -%>
    <%= render 'shared/blog_header' %>
    <%= render 'shared/flash_messages_inner'%>
    <%=  render 'shared/flash_messages_jscall' %>
    <div class="container-fluid" id="mainer">
      <div class="row" >
        <div class="col-xs-4 col-sm-4 col-md-2">
          <%= render 'admin/features/slide_nav' %>
        </div>
        <div class="col-xs-8 col-sm-8 col-md-10">
          <div id="content">
              <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <% end -%>
    <%= render 'features/back_to_top' %>    
    <%= javascript_include_tag 'layout' %>
  </body>
</html>