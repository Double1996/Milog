      <%= link_to_locale request.path, mclass: "navbar-text switch-lang" %>

      <%= content_tag(:span, "#{capitalize_name(@user)}'s Blog", class: "navbar-text ") if current_user != @user && yield(:hidden_nav_center_items).blank? %>
