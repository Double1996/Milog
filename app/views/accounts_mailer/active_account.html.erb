<% provide :preview, t("#{@default_i18n}.header") %>
<% provide :hi, t("accounts_mailer.hi", username: @user.username) %>
<% if @password.blank? %>
  <% provide :header, t("#{@default_i18n}.header") %>
<% else %>
  <% provide :header, t("#{@default_i18n}.send_password_header", password: @password) %>
<% end %>
<% provide :link, edit_accounts_activation_url(id: @user.username, token: @user.activation_token) %>
<% provide :tips, t("#{@default_i18n}.tips") %>
<% provide :help, t("accounts_mailer.help", support_email: 'hikumho@163.com') %>
<% provide :footer, t("accounts_mailer.footer") %>