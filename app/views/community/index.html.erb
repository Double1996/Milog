<% provide :pre_title, t("community.home") %>
<div class="mainer" style="margin-top: 0; padding-top: 20px;">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="boxed-group">
          <div class="pull-right boxed-opts">
            <%= t "community.opts" %>
            <%= link_to t("community.more"), community_hottest_path %>
          </div>
          <%= content_tag :h3, t("community.hottest") %>
          <div class="boxed-group-inner">
            <div class="post-group">
              <%= render 'community/articles', articles: @hottest_articles %>
            </div>
          </div>
        </div>

        <div class="boxed-group" style="margin-top: 40px;">
          <div class="pull-right boxed-opts">
            <%= t "community.opts" %>
            <%= link_to t("community.more"), community_latest_path %>
          </div>
          <%= content_tag :h3, t("community.latest") %>
          <div class="boxed-group-inner">
            <div class="post-group">
              <%= render 'community/articles', articles: @latest_articles %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3 hidden-xs hidden-sm">
        <div class="boxed-group">
          <%= content_tag :h3, t("community.statistics") %>
          <div class="boxed-group-inner">
            <ul class="list-group">
              <%= content_tag :li, link_to(t("community.account_num", num: User.abled.size), community_users_path) %>
              <%= content_tag :li, link_to(t("community.article_num", num: Article.posted.size), community_articles_path) %>
              <%= content_tag :li, t("community.comment_num", num: Comment.posted.size) %>
            </ul>
          </div>
        </div>

        <div class="boxed-group">
          <%= content_tag :h3, t("community.active_account_tmonth") %>
          <div class="boxed-group-inner">
            <%= render 'features/users', users: @users, user_in_cols: 4 %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>